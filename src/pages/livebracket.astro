---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---
<Nav></Nav>
<Layout title="Home">
    <main class="w-full flex flex-col justify-center items-center">
        <h1 class="lg:text-3xl font-extralight mt-2">Live Bracket</h3>
        <iframe src="https://brackethq.com/b/lj5hb/embed/?zoom=0" width="100%" height="700" frameborder="0" class="bracket"></iframe>
        
    </main>
    
</Layout>

<style>
    @import url("https://fonts.cdnfonts.com/css/valorant");
    h1 {
        font-family: "VALORANT", sans-serif;
        background-color: #FF4655;
		background-image: -webkit-linear-gradient(45deg, #ff9446 0%, #FF4655 50%);

        /* background-image: linear-gradient(45deg, #e0d725, #FF4655); */
        background-size: 100%;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        -webkit-text-fill-color: transparent;
        -moz-text-fill-color: transparent;
    }
    a{
        margin-top: 2rem;
        border-radius: 30px;
        background: #FF4655;
        color: white;
        text-decoration: none;
        font-size: 1.5rem;
        letter-spacing: 0.1em;
        font-weight: 400;
        padding: 10px 30px;
        transition: 0.5s;
        cursor: pointer;
    }
    a:hover{
        letter-spacing: 0.25em;
        background: #ff9446;
        box-shadow: 0 0 35px #ff9446;
    }
    .bracket{
        padding: 1rem;
    }
</style>
