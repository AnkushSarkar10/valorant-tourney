---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
    <main class="w-full min-h-screen flex flex-col justify-center items-center">
        <h1 class="text-3xl lg:text-8xl font-bold mb-2 text-center">Valorant Showdown</h1>
        <h1 class="text-3xl lg:text-8xl font-bold">2.0</h1>
        <h3 class="lg:text-3xl font-extralight mt-2">(coming soon)</h3>
    </main>
</Layout>

<style>
    @import url("https://fonts.cdnfonts.com/css/valorant");
    h1 {
        font-family: "VALORANT", sans-serif;
        background-color: #FF4655;
		background-image: -webkit-linear-gradient(45deg, #ff9446 0%, #FF4655 50%);

        /* background-image: linear-gradient(45deg, #e0d725, #FF4655); */
        background-size: 100%;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        -webkit-text-fill-color: transparent;
        -moz-text-fill-color: transparent;
    }
</style>
