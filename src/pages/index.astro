---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
    <main class="w-full pl-36 pt-32">
        <div class="flex flex-col min-h-[70vh]">
            <h1 class="text-3xl lg:text-7xl font-bold mb-2">Valorant</h1>
            <h1 class="text-3xl lg:text-7xl font-bold mb-2">Showdown</h1>
            <h1 class="text-3xl lg:text-7xl font-bold">2.0</h1>
            <div class="flex gap-8 pt-10">
                <button class="px-7 py-4 text-xl font-medium bg-[#ff4655] rounded-lg hover:bg-indigo-700"
                    >View Braket</button
                >
                <button class="px-7 py-4 text-xl font-medium bg-[#ff4655] rounded-lg hover:bg-indigo-700">Sign up</button
                >
            </div>
        </div>
        <div class="absolute top-20 right-0 overflow-x-hidden img-cont">
            <div
                class="absolute right-0 bg-purple-500 h-full w-full z-20 opacity-40"
            >
            </div>
            <img
                src="/jett4k.jpg"
                alt=""
                width="90%"
                class="relative -right-1/2 "
            />
        </div>
    </main>
</Layout>

<style>
    @import url("https://fonts.cdnfonts.com/css/valorant");
    h1 {
        font-family: "VALORANT", sans-serif;
        background-color: #ff4655;
        background-image: -webkit-linear-gradient(
            45deg,
            /* #ff9446 0%,
            #ff4655 12% */
            #ff4655 0%,
            #ff9446 25%
        );

        /* background-image: linear-gradient(45deg, #e0d725, #FF4655); */
        background-size: 100%;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        -webkit-text-fill-color: transparent;
        -moz-text-fill-color: transparent;
    }

    .img-cont > div, img {
        clip-path: polygon(0 2%, 100% 2%, 100% 90%, 0 90%);
    }
    .img-cont {
        clip-path: circle(60% at 107% 22%);
    }
   
</style>
