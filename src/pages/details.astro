---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---
<Nav></Nav>
<Layout title="Home">
    <main class="w-full min-h-screen flex flex-col justify-center items-center">
        <h1 class="text-3xl lg:text-8xl font-bold mb-2 text-center">Valorant Showdown</h1>
        <h1 class="text-3xl lg:text-8xl font-bold">2.0</h1>
        <h3 class="lg:text-3xl font-extralight mt-2">DETAILS PAGE</h3>
        <!-- <button class="liveBracketButton"> <h2 class="liveBracketText"> View Live Bracket </h2></button> -->
        <a href='#'> Live Bracket </a>
