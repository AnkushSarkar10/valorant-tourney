---
const currentPath = Astro.url.pathname;
const logo = "/valshowdown_logo_transparent.png";
const navBarActiveClass = `border-b-4 border-indigo-500`;
---

<div
    class="flex flex-wrap items-center justify-around text-lg lg:text-2xl font-medium w-full py-4 px-32"
>
    <a href="/"><img src={logo} alt="" class="w-12 mb-5 lg:mb-0 lg:w-16" /></a>

    <div class="flex gap-10 items-center">
        <h2 class={currentPath === "/" ? navBarActiveClass : ``}>
            <a href="/">Home</a>
        </h2>
        <h2 class={currentPath === "/about" ? navBarActiveClass : ``}>
            <a href="/about">About</a>
        </h2>
        <h2 class={currentPath === "/livebracket" ? navBarActiveClass : ``}>
            <a href="/livebracket">Bracket</a>
        </h2>
    </div>
    <button
        class="px-6 py-2.5 bg-gradient-to-r from-[#ff4655] from-10% to-indigo-700 hover:from-indigo-700 hover:to-indigo-700 rounded-lg hidden lg:block"
        >Sign up</button
    >
</div>

